{{#if updateQuestionForm}}
  <div class="updateQuestion">
    <div>
      <form>
        <div class="form-group">
          <label for="userQuestion">Question</label>
          {{input value=userQuestion id="userQuestion" placeholder=question.userQuestion}}
        </div>

        <div class="form-group">
          <label for="userName">Your Name</label>
          {{input value=userName id="userName" placeholder=question.userName}}
        </div>

        <div class="form-group">
          <label for="comment">Question Details</label>
          {{input value=comment id="comment" placeholder=question.comment}}
        </div>
        <button {{action 'update' question}}>Save</button>
      </form>
    </div>
  </div>
{{else}}
  <button {{action 'updateQuestionForm'}}>Update Question</button>
{{/if}}
