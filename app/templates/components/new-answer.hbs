
{{#if addNewAnswer}}
  <h1>New Answer</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="answer">Answer</label>
          {{input value=answer id="answer"}}
        </div>

        <div class="form-group">
          <label for="name">Your Name</label>
          {{input value=name id="name"}}
        </div>

        <button {{action 'save1'}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'answerFormShow'}}>New Answer</button>
{{/if}}
