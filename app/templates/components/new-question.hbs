{{#if addNewQuestion}}
  <h1>New Question</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="ask">Question</label>
          {{input value=ask id="ask"}}
        </div>

        <div class="form-group">
          <label for="author">Your Name</label>
          {{input value=author id="author"}}
        </div>

        <div class="form-group">
          <label for="detail">Detail</label>
          {{input value=detail id="detail"}}
        </div>

        <button {{action 'save1'}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'questionFormShow'}}>Ask Question</button>
{{/if}}
